(function(jQuery,Drupal){Drupal.behaviors.anses_common={attach:function(context,settings){jQuery('ul.box-content-inner').once('load-more').each(function(index,item){if(jQuery(item).children().length>3){jQuery(item).children().hide().filter(':lt(3)').show();jQuery(item).append('<li class="box-footer load-more"><a>ver más</a></li>').find('li:last').click(function(){jQuery(this).siblings(':gt(2)').toggle();jQuery(item).find('li:last a').text(jQuery(this).text()=='ver más'?'ver menos':'ver más');});}})}}})(jQuery,Drupal);